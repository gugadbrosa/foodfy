{% extends "layout.njk" %}

{%block content%}

    <div class='recipe-top'>
        <img src="{{item.image}}" alt="{{item.title}}">
        <h1>{{item.title}}</h1>
        <h3>por {{item.author}}</h3>
    </div>

    <div class='recipe-subtitle'>
        <h2>Ingredientes</h2> 
        <h4 class='hide-ingredients'>Esconder</h4> 
        <h4 class='show-ingredients hidden'>Mostrar</h4>
    </div>

    <div class='ingredients'>
        <ul>
        {%for ingredient in item.ingredients %}
            <li>{{ingredient}}</li>
        {%endfor%}
        </ul>
    </div>

    <div class="recipe-subtitle">
        <h2>Modo de Preparo</h2> 
        <h4 class='hide-preparation'>Esconder</h4> 
        <h4 class="show-preparation hidden">Mostrar</h4>
    </div>

    <div class='preparation'>
        <ul>
        {%for preparation in item.preparation %}
            <li>{{preparation}}</li>
        {%endfor%}
        </ul>
    </div>

    <div class="recipe-subtitle">
        <h2>Informações Adicionais</h2> 
        <h4 class='hide-information'>Esconder</h4> 
        <h4 class="show-information hidden">Mostrar</h4>
    </div>

    <div class='information'>
        <p>{{item.information}}</p>
    </div>

{%endblock%}

{% block scripts %}
    <script src='/hideshow.js'></script>
{% endblock %}